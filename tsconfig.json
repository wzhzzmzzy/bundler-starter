{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "tsc-dist",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "esbuild-dist", "**/*.test.ts", "scripts"]
}
